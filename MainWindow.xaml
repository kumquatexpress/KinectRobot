<Window x:Class="KinectCoordinateMapping.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="440" Width="1205.97"
        Loaded="Window_Loaded" Closed="Window_Closed"
        KeyUp="Window_KeyUp" KeyDown="Window_KeyDown">
    <Grid Margin="0,0,-8,0" Height="400" VerticalAlignment="Bottom">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"></RowDefinition>
            <RowDefinition Height="270"></RowDefinition>
            <RowDefinition Height="100"></RowDefinition>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Bottom" FontFamily="Segoe UI" FontSize="18" Margin="10,0,0,0">Color Camera</TextBlock>
        <Viewbox Grid.Row="1" HorizontalAlignment="Left">
            <Image Name="colorCamera" Width="480" Height="270" Stretch="UniformToFill"/>
        </Viewbox>
        <TextBlock HorizontalAlignment="Right" VerticalAlignment="Bottom" FontFamily="Segoe UI" FontSize="18" Margin="0,0,10,0">Depth Camera</TextBlock>
        <Viewbox Grid.Row="1" HorizontalAlignment="Right">
            <Image Name="depthCamera" Width="480" Height="270" Stretch="UniformToFill"/>
        </Viewbox>
        <TextBox Grid.Row="2" Name="SleepTime_Move" Height="Auto" HorizontalAlignment="Left" Margin="10 10 0 10" Width="150" />
        <Button Grid.Row="2" Content="Move Time" Height="Auto" HorizontalAlignment="Right" Margin="0,10,978,10" Click="SubmitMove_Click"/>
        <Button Grid.Row="2" Content="Forward" Height="Auto" HorizontalAlignment="Center" Margin="385,10,764,10" Click="ForwardButton_Click" Width="57" />
        <TextBox Grid.Row="2" Name="SleepTime_Rotate" Height="Auto" HorizontalAlignment="Left" Margin="642,10,0,10" Width="110" />
        <Button Grid.Row="2" Content="Rotate Time" Height="Auto" HorizontalAlignment="Right" Margin="0,10,381,10" Click="SubmitRotate_Click"/>
        <Button Grid.Row="2" Content="Backward" Height="Auto" HorizontalAlignment="Center" Margin="447,10,689,10" Click="BackwardButton_Click" Width="70" />
        <Button Grid.Row="2" Content="RotateCCW" Height="Auto" HorizontalAlignment="Center" Margin="233,10,899,10" Click="RotateCCW_Click" Width="74" />
        <Button Grid.Row="2" Content="RotateCW" Height="Auto" HorizontalAlignment="Center" Margin="312,10,826,10" Click="RotateCW_Click" Width="68" />
        <Button Grid.Row="2" Content="Capture Panoramas" Height="Auto" HorizontalAlignment="Center" Margin="522,10,569,10" Click="CapturePanoramas_Click" Width="115" />
    </Grid>
</Window>